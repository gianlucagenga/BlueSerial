<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:measureWithLargestChild="true"
    android:background="#ffffff">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.blueserial.CircularSeekBar
            android:id="@+id/progressLight"
            android:layout_width="267dp"
            android:layout_height="264dp"
            android:layout_gravity="center_horizontal"
            app:start_angle="270"
            app:end_angle="270"
            app:circle_x_radius="300dp"
            app:circle_y_radius="300dp"
            app:use_custom_radii="true"
            app:progress="0"
            app:max="100"
            app:circle_color="#545454"
            app:circle_progress_color="#A68064"
            app:pointer_alpha_ontouch="100"
            app:pointer_color="#CD853F"
            app:pointer_halo_color="#88CD853F"
            app:circle_stroke_width="7dp"
            android:indeterminate="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Space
                    android:layout_width="17dp"
                    android:layout_height="match_parent" />

                <ToggleButton
                    android:layout_width="138dp"
                    android:layout_height="140dp"
                    android:text="Lamp"
                    android:id="@+id/switchONOFF"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_toggle"
                    android:textOn=""
                    android:textOff="" />

                <Space
                    android:layout_width="21dp"
                    android:layout_height="match_parent" />

                <ToggleButton
                    android:layout_width="138dp"
                    android:layout_height="140dp"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleNight"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_togglenight"
                    android:textOn=""
                    android:textOff="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Space
                    android:layout_width="17dp"
                    android:layout_height="match_parent" />

                <ToggleButton
                    android:layout_width="138dp"
                    android:layout_height="140dp"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleRead"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_toggleread"
                    android:textOn=""
                    android:textOff="" />

                <Space
                    android:layout_width="21dp"
                    android:layout_height="match_parent" />

                <ToggleButton
                    android:layout_width="138dp"
                    android:layout_height="140dp"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleTimer"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_toggletimer"
                    android:textOn=""
                    android:textOff="" />

            </LinearLayout>
        </LinearLayout>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></TableRow>

</LinearLayout> <!-- </RelativeLayout> -->
